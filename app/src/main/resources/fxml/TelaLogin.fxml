<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="levelup.desktop.java.ui.TelaLoginController"
            styleClass="glass-root"
            prefWidth="900"
            prefHeight="500">

    <!-- BARRA ESTILO macOS NO TOPO -->
    <top>
        <BorderPane styleClass="mac-titlebar">

            <!-- título -->
            <center>
                <Label text="LEVELUP" styleClass="mac-title"/>
            </center>

            <!-- botões à direita -->
            <right>
                <HBox spacing="6">
                    <Button fx:id="botaoFechar"
                            text="✕"
                            onAction="#aoClicarFechar"
                            focusTraversable="false"
                            styleClass="window-button-close"/>
                </HBox>
            </right>
        </BorderPane>
    </top>

    <!-- CONTEÚDO CENTRAL -->
    <center>
        <!-- StackPane central pra manter o card no meio da janela -->
        <StackPane BorderPane.alignment="CENTER" alignment="CENTER">

            <!-- CARD ÚNICO (Cadastro + Login) -->
            <StackPane styleClass="auth-card">
                
                <HBox alignment="CENTER" spacing="40">
                    <padding>
                        <!-- padding interno do card -->
                        <Insets top="26" right="40" bottom="30" left="40"/>
                    </padding>

                    <!-- LADO ESQUERDO: CADASTRO -->
                    <VBox alignment="TOP_CENTER"
                          styleClass="register-pane">
                        <Label text="Criar conta"
                               styleClass="login-title"
                               maxWidth="Infinity"
                               alignment="CENTER"/>

                        <VBox spacing="10" alignment="CENTER">
                            <TextField fx:id="campoNomeCadastro"
                                       promptText="Nome"
                                       prefWidth="260"
                                       maxWidth="260"
                                       styleClass="login-field"/>

                            <TextField fx:id="campoEmailCadastro"
                                       promptText="E-mail"
                                       prefWidth="260"
                                       maxWidth="260"
                                       styleClass="login-field"/>

                            <PasswordField fx:id="campoSenhaCadastro"
                                           promptText="Senha"
                                           prefWidth="260"
                                           maxWidth="260"
                                           styleClass="login-field"/>

                            <PasswordField fx:id="campoConfirmarSenhaCadastro"
                                           promptText="Confirmar senha"
                                           prefWidth="260"
                                           maxWidth="260"
                                           styleClass="login-field"/>

                            <Button fx:id="botaoConfirmarCadastro"
                                    text="Cadastrar-se"
                                    onAction="#aoClicarCadastrar"
                                    prefWidth="260"
                                    maxWidth="260"
                                    styleClass="login-button"/>
                        </VBox>

                        <Label text="Já tem conta? Use o painel à direita para entrar."
                               wrapText="true"
                               prefWidth="260"
                               maxWidth="260"
                               styleClass="register-hint">
                            <VBox.margin>
                                <Insets top="16"/>
                            </VBox.margin>
                        </Label>
                    </VBox>

                    <!-- DIVISOR VERTICAL -->
                    <Separator orientation="VERTICAL"
                               prefHeight="260"
                               styleClass="login-divider"/>

                    <!-- LADO DIREITO: LOGIN -->
                    <VBox alignment="TOP_CENTER"
                          styleClass="login-pane">
                        <Label text="Login"
                               styleClass="login-title"
                               maxWidth="Infinity"
                               alignment="CENTER"/>

                        <VBox spacing="12" alignment="CENTER">
                            <TextField fx:id="campoEmail"
                                       promptText="E-mail"
                                       prefWidth="260"
                                       maxWidth="260"
                                       styleClass="login-field"/>

                            <PasswordField fx:id="campoSenha"
                                           promptText="Senha"
                                           prefWidth="260"
                                           maxWidth="260"
                                           styleClass="login-field"/>

                            <Button fx:id="botaoEntrar"
                                    text="Entrar"
                                    onAction="#aoClicarEntrar"
                                    prefWidth="260"
                                    maxWidth="260"
                                    styleClass="login-button"/>
                        </VBox>

                        <Hyperlink text="Esqueci minha senha"
                                   onAction="#aoClicarEsqueciSenha"
                                   styleClass="login-link">
                            <VBox.margin>
                                <Insets top="12"/>
                            </VBox.margin>
                        </Hyperlink>

                        <Label fx:id="labelErro"
                               wrapText="true"
                               prefWidth="260"
                               maxWidth="260"
                               styleClass="login-error">
                            <VBox.margin>
                                <Insets top="8"/>
                            </VBox.margin>
                        </Label>
                    </VBox>
                </HBox>
            </StackPane>
        </StackPane>
    </center>

</BorderPane>
