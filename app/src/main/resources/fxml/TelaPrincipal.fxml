<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
       fx:controller="levelup.desktop.java.ui.TelaPrincipalController"
       styleClass="principal-root">


       <top>
              <StackPane styleClass="app-topbar">


                     <StackPane fx:id="barraTopoBlurLayer"
                            styleClass="topbar-blur-layer"
                            mouseTransparent="true">
                            <ImageView fx:id="barraTopoBgImage"
                                   preserveRatio="false"
                                   smooth="true"
                                   cache="true"
                                   mouseTransparent="true" />
                     </StackPane>


                     <VBox styleClass="topbar-inner">


                            <HBox fx:id="barraTituloRoot"
                                   spacing="8"
                                   styleClass="app-titlebar-inner">
                                   <Label text="LEVELUP" styleClass="app-title" />
                                   <Region HBox.hgrow="ALWAYS" />
                                   <Button fx:id="botaoMinimizar"
                                          text="–"
                                          onAction="#aoClicarMinimizar"
                                          focusTraversable="false"
                                          styleClass="window-button-minimize" />
                                   <Button fx:id="botaoFechar"
                                          text="✕"
                                          onAction="#aoClicarFechar"
                                          focusTraversable="false"
                                          styleClass="window-button-close" />
                            </HBox>


                            <Region styleClass="topbar-divider" />


                            <HBox spacing="12"
                                   alignment="CENTER_LEFT"
                                   styleClass="app-navbar-inner">
                                   <padding>
                                          <Insets top="8" right="20" bottom="8" left="20" />
                                   </padding>

                                   <Button fx:id="botaoInicio"
                                          text="Início"
                                          onAction="#aoClicarInicio"
                                          styleClass="nav-button nav-button-ativo" />

                                   <Button fx:id="botaoHabitos"
                                          text="Hábitos"
                                          onAction="#aoClicarHabitos"
                                          styleClass="nav-button" />

                                   <Button fx:id="botaoEstudos"
                                          text="Estudos"
                                          onAction="#aoClicarEstudos"
                                          styleClass="nav-button" />

                                   <Button fx:id="botaoMetas"
                                          text="Metas"
                                          onAction="#aoClicarMetas"
                                          styleClass="nav-button" />
                            </HBox>

                     </VBox>
              </StackPane>
       </top>


       <center>
              <StackPane fx:id="conteudoCentral"
                     BorderPane.alignment="CENTER"
                     styleClass="principal-conteudo">


                     <StackPane fx:id="cardInicioRoot"
                            styleClass="inicio-card-root">


                            <StackPane fx:id="cardInicioBlurLayer"
                                   styleClass="inicio-card-blur-layer"
                                   mouseTransparent="true">
                                   <ImageView fx:id="cardInicioBgImage"
                                          preserveRatio="false"
                                          smooth="true"
                                          cache="true"
                                          mouseTransparent="true" />
                            </StackPane>


                            <VBox styleClass="inicio-card-inner"
                                   spacing="10">


                                   <HBox spacing="8"
                                          alignment="CENTER_LEFT">
                                          <Label fx:id="labelSaudacaoUsuario"
                                                 text="Bom dia, Guilherme"
                                                 styleClass="inicio-card-greeting" />


                                          <Region HBox.hgrow="ALWAYS" />

                                          <Label fx:id="labelResumoClima"
                                                 text="Céu limpo, 22°C"
                                                 styleClass="inicio-card-summary" />
                                   </HBox>


                                   <HBox spacing="16"
                                          alignment="CENTER_LEFT">


                                          <ImageView fx:id="imagemClimaAtual"
                                                 fitWidth="40"
                                                 fitHeight="40"
                                                 preserveRatio="true"
                                                 smooth="true"
                                                 cache="true"
                                                 styleClass="inicio-card-main-icon" />


                                          <VBox spacing="4">
                                                 <Label fx:id="labelHorarioAtual"
                                                        text="01:34"
                                                        styleClass="inicio-card-time" />
                                                 <Label fx:id="labelDataAtual"
                                                        text="21/11/2025"
                                                        styleClass="inicio-card-date" />
                                          </VBox>
                                   </HBox>


                                   <VBox spacing="6"
                                          styleClass="inicio-card-forecast">


                                          <HBox spacing="8"
                                                 alignment="CENTER_LEFT"
                                                 styleClass="forecast-row">
                                                 <Label fx:id="labelDia1"
                                                        text="Dom"
                                                        styleClass="forecast-day" />
                                                 <Label fx:id="labelMin1"
                                                        text="15°C"
                                                        styleClass="forecast-temp-min" />
                                                 <StackPane HBox.hgrow="ALWAYS"
                                                        styleClass="forecast-bar-track">
                                                        <Region fx:id="barraDia1"
                                                               styleClass="forecast-bar-fill" />
                                                 </StackPane>
                                                 <Label fx:id="labelMax1"
                                                        text="22°C"
                                                        styleClass="forecast-temp-max" />
                                          </HBox>


                                          <HBox spacing="8"
                                                 alignment="CENTER_LEFT"
                                                 styleClass="forecast-row">
                                                 <Label fx:id="labelDia2"
                                                        text="Seg"
                                                        styleClass="forecast-day" />
                                                 <Label fx:id="labelMin2"
                                                        text="8°C"
                                                        styleClass="forecast-temp-min" />
                                                 <StackPane HBox.hgrow="ALWAYS"
                                                        styleClass="forecast-bar-track">
                                                        <Region fx:id="barraDia2"
                                                               styleClass="forecast-bar-fill" />
                                                 </StackPane>
                                                 <Label fx:id="labelMax2"
                                                        text="19°C"
                                                        styleClass="forecast-temp-max" />
                                          </HBox>


                                          <HBox spacing="8"
                                                 alignment="CENTER_LEFT"
                                                 styleClass="forecast-row">
                                                 <Label fx:id="labelDia3"
                                                        text="Ter"
                                                        styleClass="forecast-day" />
                                                 <Label fx:id="labelMin3"
                                                        text="9°C"
                                                        styleClass="forecast-temp-min" />
                                                 <StackPane HBox.hgrow="ALWAYS"
                                                        styleClass="forecast-bar-track">
                                                        <Region fx:id="barraDia3"
                                                               styleClass="forecast-bar-fill" />
                                                 </StackPane>
                                                 <Label fx:id="labelMax3"
                                                        text="15°C"
                                                        styleClass="forecast-temp-max" />
                                          </HBox>


                                          <HBox spacing="8"
                                                 alignment="CENTER_LEFT"
                                                 styleClass="forecast-row">
                                                 <Label fx:id="labelDia4"
                                                        text="Qua"
                                                        styleClass="forecast-day" />
                                                 <Label fx:id="labelMin4"
                                                        text="6°C"
                                                        styleClass="forecast-temp-min" />
                                                 <StackPane HBox.hgrow="ALWAYS"
                                                        styleClass="forecast-bar-track">
                                                        <Region fx:id="barraDia4"
                                                               styleClass="forecast-bar-fill" />
                                                 </StackPane>
                                                 <Label fx:id="labelMax4"
                                                        text="12°C"
                                                        styleClass="forecast-temp-max" />
                                          </HBox>

                                   </VBox>


                            </VBox>

                     </StackPane>

              </StackPane>
       </center>

</BorderPane>